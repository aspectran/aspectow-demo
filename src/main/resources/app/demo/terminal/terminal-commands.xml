<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE aspectran PUBLIC "-//ASPECTRAN//DTD Aspectran 9.0//EN"
        "https://aspectran.com/dtd/aspectran-9.dtd">
<aspectran>

    <settings>
        <setting name="transletNamePrefix" value="/commands"/>
    </settings>

    <translet name="/hello">
        <transform format="text">
            <template style="apon">
                |Hello, World!
            </template>
        </transform>
    </translet>

    <translet name="/login">
        <parameter name="email" mandatory="true">${id}@${domain}</parameter>
        <parameter name="password" mandatory="true" secret="true"/>
        <attribute name="attr1" mandatory="true">${id}@${domain}</attribute>
        <attribute name="attr2" mandatory="true" secret="true">${password}</attribute>
        <transform format="text">
            <template style="apon">
                |------------------------------------------------
                |The parameters you entered are:
                |   email: ${email}
                |   password: ${password}
                |The internally generated attributes are:
                |   attr1: @{attr1}
                |   attr2: @{attr2}
                |------------------------------------------------
            </template>
        </transform>
    </translet>

</aspectran>
